{
	"name": "product_transformation",
	"properties": {
		"activities": [
			{
				"name": "Clean_useless_columns",
				"description": "remove useless columns and copy to step1_container",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.0:10:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true,
							"wildcardFileName": "*.csv",
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobStorageWriteSettings",
							"copyBehavior": "PreserveHierarchy"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".csv"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"name": "product_id",
									"type": "String",
									"physicalType": "String"
								},
								"sink": {
									"name": "product_id",
									"type": "String",
									"physicalType": "String"
								}
							},
							{
								"source": {
									"name": "product_name",
									"type": "String",
									"physicalType": "String"
								},
								"sink": {
									"name": "product_name",
									"type": "String",
									"physicalType": "String"
								}
							},
							{
								"source": {
									"name": "category",
									"type": "String",
									"physicalType": "String"
								},
								"sink": {
									"name": "category",
									"type": "String",
									"physicalType": "String"
								}
							},
							{
								"source": {
									"name": "actual_price",
									"type": "String",
									"physicalType": "String"
								},
								"sink": {
									"name": "price",
									"physicalType": "String"
								}
							},
							{
								"source": {
									"name": "rating",
									"type": "String",
									"physicalType": "String"
								},
								"sink": {
									"name": "rating",
									"type": "String",
									"physicalType": "String"
								}
							},
							{
								"source": {
									"name": "rating_count",
									"type": "String",
									"physicalType": "String"
								},
								"sink": {
									"name": "review_count",
									"physicalType": "String"
								}
							},
							{
								"source": {
									"name": "about_product",
									"type": "String",
									"physicalType": "String"
								},
								"sink": {
									"name": "description",
									"physicalType": "String"
								}
							},
							{
								"source": {
									"name": "img_link",
									"type": "String",
									"physicalType": "String"
								},
								"sink": {
									"name": "image_url",
									"physicalType": "String"
								}
							},
							{
								"source": {
									"name": "product_link",
									"type": "String",
									"physicalType": "String"
								},
								"sink": {
									"name": "product_url",
									"physicalType": "String"
								}
							}
						],
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "ProductsRawSource",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "1_clean_columns_products",
						"type": "DatasetReference"
					}
				]
			},
			{
				"name": "Clean_rows",
				"description": "Clean Duplicated rows and format columns: price and review_count",
				"type": "ExecuteDataFlow",
				"dependsOn": [
					{
						"activity": "Clean_useless_columns",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.0:10:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"dataflow": {
						"referenceName": "Remove_duplicated_Transform_CSV",
						"type": "DataFlowReference"
					},
					"compute": {
						"coreCount": 8,
						"computeType": "General"
					},
					"traceLevel": "Fine"
				}
			},
			{
				"name": "Copy_to_archive",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "Clean_rows",
						"dependencyConditions": [
							"Succeeded"
